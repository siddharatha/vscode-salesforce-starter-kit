{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compress All",
            "command": "sh ./scripts/compress.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "promptOnClose": true,
            "isBackground": true
        },
        {
            "label": "compress single",
            "type": "shell",
            "command": "echo 'processing \"${file}\"' && perl -i.bak -p scripts/profileCompress.pl \"${file}\" > .ignore && rm \"${file}\".bak && echo 'done'",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "just-true single",
            "type": "shell",
            "command": "echo 'processing \"${file}\"' && perl -i.bak -p scripts/profileCompress.pl \"${file}\" > .ignore && perl -i.bak -p scripts/removeFalseValues.pl \"${file}\" > .ignore && rm \"${file}.bak\" > .ignore && echo 'done'",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "just-true all",
            "type": "shell",
            "command": "sh ./scripts/justtrue.sh",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "get my changes",
            "type": "shell",
            "command": "time sh ./scripts/getMyChanges.sh",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Get branch",
            "type": "shell",
            "command": "time sh ./scripts/downloadBranch.sh",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }           
        }
    ]
}